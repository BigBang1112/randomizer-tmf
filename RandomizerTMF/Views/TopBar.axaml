<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:vm="using:RandomizerTMF.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="36"
             x:Class="RandomizerTMF.Views.TopBar">
	
	<Design.DataContext>
		<vm:TopBarViewModel/>
	</Design.DataContext>

	<Border DockPanel.Dock="Top" BorderThickness="0 0 0 2" Padding="4 4 0 4" Margin="6 0">
		<Border.BorderBrush>
			<LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
				<GradientStop Color="Transparent" Offset="0.1" />
				<GradientStop Color="#444" Offset="1" />
			</LinearGradientBrush>
		</Border.BorderBrush>
		<Panel>
			<Label IsHitTestVisible="False" Content="Randomizer TMF - Random Map Challenge for TMNF/TMUF" VerticalContentAlignment="Center"/>
			<Button HorizontalAlignment="Right" HorizontalContentAlignment="Center" Margin="0 0 32 0"
					Width="30" FontSize="10" Command="{Binding OnMinimizeClick}">_</Button>
			<Button HorizontalAlignment="Right" HorizontalContentAlignment="Center"
					Width="30" FontSize="10" Background="DarkRed" Command="{Binding OnCloseClick}">X</Button>
		</Panel>
	</Border>
</UserControl>
